$baseColour = rgba(11, 13, 16, 1.0)
$bgColour = lighten($baseColour, 4%)
$filterColour = lighten($baseColour, 10%)
$activeBg = rgba(white, .1)
$edgePadding = 15px

.fixedHeader
  position: fixed
  top: 0
  left: 0
  right: 0
  z-index: 10

.fakeHeader
  visibility: hidden

.logo
  display: none
  height: 30px
  margin-right: 10px

.header
  background: $bgColour
  display: flex
  justify-content: space-between
  align-items: center
  padding: 0 $edgePadding
  z-index: 1
  position: relative
  background-position: center
  background-size: cover
  box-shadow: 0 0 20px rgba(0,0,0,0.5);

.main
  display: flex

.version
  font-size: .65em
  opacity: .7
  vertical-align: top
  position: relative
  top: -2px

.navItem
  padding: 17px 15px 13px 15px
  line-height: 22px
  transition: all 150ms ease-in-out
  color: inherit
  text-decoration: none
  display: flex
  align-items: center

  &:hover
    background: $activeBg

  &.active
    position: relative

    &:after
      display: block
      content: ''
      position absolute
      bottom: 0
      right: 0
      left: 0
      height: 3px
      background: rgba(white, .3)

.siteName
  padding: $edgePadding
  padding-left: 0
  composes: navItem
  font-weight: 400
  font-size: 22px
  margin: 0
  display: block

  &:hover
    background: none

  > *
    vertical-align: middle

.social
  margin-right: -7px
  display: flex
  align-items: center

.socialItem
  font-size: 20px
  padding: 0 7px
  opacity: .7
  transition: all 150ms ease-in-out
  color: white !important

  &:hover
    opacity: 1

  @media screen and (max-width: 850px)
    display: none

._dropdownMenuRoot
  display: flex
  align-items: center
  cursor: pointer
  padding: 7px 10px
  transition: all 150ms ease-in-out
  position: relative

  &:hover
    background: $activeBg

._dropdownMenuDropdown
  position: absolute
  top: 100%
  right: 0
  background: #13161B
  box-shadow: 0 3px 3px rgba(0,0,0,.5);

._dropdownMenuOption
  cursor: pointer
  padding: 7px 10px
  transition: all 150ms ease-in-out
  white-space: nowrap

  &:hover
    background: $activeBg

.languageSwitcher
  composes: _dropdownMenuRoot
  padding-top: 15px
  padding-bottom: 15px

.langDropdown
  composes: _dropdownMenuDropdown

.langOption
  composes: _dropdownMenuOption
  font-size: .85em
  white-space: nowrap

// account switcher stuff
.accountSwitcher
  composes: _dropdownMenuRoot

.displayName
  font-size: .85em

.platform
  font-size: .7em

.switchButton
  background: none
  border: none
  color: rgba(white, .8)
  padding-left: 10px

.accountsDropdown
  composes: _dropdownMenuDropdown

.dropdownAccount
  composes: _dropdownMenuOption

.mobile
  display: none

.hambuger
  appearance: none
  background: none
  border-radius: none
  border: none
  color: white
  font-size: 20px
  padding: 5px 15px
  margin-left: -15px
  outline: none

@media screen and (max-width: 850px)
  .mobile
    display: flex
    align-items: center

  .main
    display: none
