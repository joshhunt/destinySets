$size = 44px;
$green = #44bd32;

._root
  margin: 5px

.root
  composes: _root
  display: flex

.imageWrapper
  position: relative

.root:not(.modStyle)
  &.obtained
  &.dismantled
  &.checklisted
    .fadeOut
      opacity: .25

.modStyle
  .fadeOut
    opacity: .5

  &.obtained
  &.dismantled
  &.checklisted
    .fadeOut
      opacity: 1

.image
  display: block
  height: $size
  width: auto
  min-width: $size
  background: rgba(#D2D2D2, 0.1)
  object-fit: cover

  .modStyle &
    height: 53px
    min-width: 53px
    background: none
    border-radius: 3px

.overlay
  position: absolute
  top: 0
  left: 0
  width: 100%

.overlay.overlay
  background: none !important

.placeholder
  composes: _root image
  height: $size
  background: rgba(#D2D2D2, 0.1)

.tick
  position: absolute
  top: -5px
  right: @top
  line-height: 1
  text-align: center
  background: $green
  border-radius: 50%
  font-size: 12px
  padding: 3px
  width: 18px
  height: 18px
  filter: drop-shadow(2px 4px 6px #15191D)

  .dismantled &
    background: #7f8fa6

  .checklisted &
    background: #3c94ff

.purchasable
  composes: tick
  padding: 0
  // background: #e67e22
  background: none
  width: 20px
  height: 20px

  img
    width: 100%

  &.legendaryShards
    filter: drop-shadow(0px 0px 1px #15191d) drop-shadow(0px 0px 2px #15191d) drop-shadow(0px 0px 0px #15191d) drop-shadow(2px 4px 6px #15191d)

.extended
  margin-left: 5px
  line-height: 1.2

.itemType
  font-size: .85em
  opacity: .8
  margin-top: 2px

.objectiveOverlay
  position: absolute
  bottom: 2px
  left: 2px
  right: 2px
  height: 4px
  background: rgba(black, .5)

.objectiveTrack
  height: 100%
  background: $green

.objectivesComplete
  opacity: .25


.role
  transition: opacity 150ms ease-in-out
  width: 18px
  height: 18px
  display: block
  position: absolute
  bottom: 2px
  right: 2px
  opacity: 1
  background: #212121
  border-radius: 16px

  .root:hover &
    opacity: 0
