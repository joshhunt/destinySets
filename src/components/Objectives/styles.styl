$emptyTrack = lighten(#16191E, 2%)
$filledTrack = rgb(80, 82, 93)

//
// Objectives
//
.objective
  margin-bottom: 10px
  position: relative
  background: $emptyTrack
  border: 1px solid $filledTrack
  padding: 5px 8px

  .trackedStat &
    margin-bottom: 0
    // background: lighten(#16191E, 2%)

.objectiveTrack
  position: absolute
  top: 0
  bottom: 0
  left: 0
  height: 100%
  width: 0
  z-index: 1
  background: $filledTrack
  transition: width 250ms ease-in-out

  .trackedStat &
    display: none

.objectiveText
  position: relative
  display: flex
  justify-content: space-between
  align-items: center
  line-height: 1.2
  z-index: 2

  & > :first-child
    padding-right: 30px

  & > :last-child
    font-weight: 600
